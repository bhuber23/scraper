<div class="row">
    <div class="col-md-10">
        <div data-id="{{_id}}">
            <h3>Title: {{title}}</h3>
            <p>Summary: {{summary}}</p>
            <a href="https://www.nytimes.com/{{link}}" target="_blank">View Article</a>
        </div>
    </div>
    <div class="col-md-2">
        <button type="button" data-id="{{_id}}" class="btn btn-primary save">Save Article</button>
    </div>
</div>